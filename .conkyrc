background yes
use_xft yes
xftfont Droid Sans:size=12
xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_transparent yes
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 200 200
maximum_width 200
draw_shades yes
draw_outline no
draw_borders no
draw_graph_borders yes
default_color white
default_shade_color black
default_outline_color white
alignment top_right
gap_x 35
gap_y 55
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale no

TEXT
${font Droid Sans:bold:size=12}SYSTEM ${hr 2}
${font Droid Sans:normal:size=12}$sysname $kernel $alignr $machine
Host:$alignr$nodename
Uptime:$alignr$uptime

${font Droid Sans:bold:size=12}PROCESSORS ${hr 2}
${font Droid Sans:normal:size=12}${cpugraph cpu0}
CPU0: ${cpu cpu0}% ${cpubar cpu0}
${font Droid Sans:normal:size=12}${cpugraph cpu1}
CPU1: ${cpu cpu1}% ${cpubar cpu1}
${font Droid Sans:normal:size=12}${cpugraph cpu2}
CPU2: ${cpu cpu2}% ${cpubar cpu2}
${font Droid Sans:normal:size=12}${cpugraph cpu3}
CPU3: ${cpu cpu3}% ${cpubar cpu3}

${font Droid Sans:bold:size=12}MEMORY ${hr 2}
${font Droid Sans:normal:size=12}RAM $alignc $mem / $memmax $alignr $memperc%
$membar

${font Droid Sans:bold:size=12}DISKS ${hr 2}
${font Droid Sans:normal:size=12}/ $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /}%
${fs_bar /}
SWAP $alignc ${swap} / ${swapmax} $alignr ${swapperc}%
${swapbar}

${font Droid Sans:bold:size=12}TOP PROCESSES ${hr 2}
${font Droid Sans:normal:size=12}${top_mem name 1}${alignr}${top mem 1} %
${top_mem name 2}${alignr}${top mem 2} %
$font${top_mem name 3}${alignr}${top mem 3} %
$font${top_mem name 4}${alignr}${top mem 4} %
$font${top_mem name 5}${alignr}${top mem 5} %

${font Droid Sans:bold:size=12}NETWORK ${hr 2}
${font Droid Sans:normal:size=12}IP address: $alignr ${addr eth0}
${downspeedgraph eth0}
DLS: ${downspeed eth0}/s $alignr total: ${totaldown eth0}
${upspeedgraph eth0}
ULS: ${upspeed eth0}/s $alignr total: ${totalup eth0}
